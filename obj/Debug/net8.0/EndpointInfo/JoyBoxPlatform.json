{
  "openapi": "3.0.4",
  "info": {
    "title": "JoyBoxPlatform API",
    "description": "API for JoyBox games platform",
    "version": "v1"
  },
  "paths": {
    "/api/games": {
      "get": {
        "tags": [
          "Games"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/games/{id}": {
      "get": {
        "tags": [
          "Games"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/games/upload": {
      "post": {
        "tags": [
          "Games"
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "ZipFile": {
                    "type": "string",
                    "format": "binary"
                  },
                  "Title": {
                    "type": "string"
                  },
                  "Description": {
                    "type": "string"
                  }
                }
              },
              "encoding": {
                "ZipFile": {
                  "style": "form"
                },
                "Title": {
                  "style": "form"
                },
                "Description": {
                  "style": "form"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": { },
  "tags": [
    {
      "name": "Games"
    }
  ]
}